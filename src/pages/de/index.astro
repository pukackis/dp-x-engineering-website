---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title="DP-X Engineering">
    <header class="bg-gray-900 text-white py-4 sticky top-0 z-50">
        <div class="container mx-auto flex justify-between items-center">
            <div class="logo">
                <a href="/">
                    <img src="https://placehold.co/100x50?text=DP-X+Logo" alt="DP-X Engineering Logo" class="h-12">
                </a>
            </div>
            <nav>
                <ul class="flex space-x-4">
                    <li><a href="#hero" class="hover:text-teal-400 transition-colors duration-300">{t('nav.home')}</a></li>
                    <li><a href="#services" class="hover:text-teal-400 transition-colors duration-300">{t('nav.services')}</a></li>
                    <li><a href="#portfolio" class="hover:text-teal-400 transition-colors duration-300">{t('nav.portfolio')}</a></li>
                    <li><a href="#about" class="hover:text-teal-400 transition-colors duration-300">{t('nav.about')}</a></li>
                    <li><a href="#clients" class="hover:text-teal-400 transition-colors duration-300">{t('nav.clients')}</a></li>
                    <li><a href="#contact" class="hover:text-teal-400 transition-colors duration-300">{t('nav.contact')}</a></li>
                </ul>
            </nav>
            <div class="language-switcher">
                <a href="/en" class="text-white hover:text-teal-400 transition-colors duration-300">EN</a> /
                <a href="/de" class="text-white hover:text-teal-400 transition-colors duration-300">DE</a>
            </div>
        </div>
    </header>

    <section id="hero" class="relative h-screen flex items-center justify-center text-center bg-cover bg-center" style="background-image: url('https://placehold.co/1920x1080?text=Hero+Image+CAD');">
        <div class="absolute inset-0 bg-black opacity-50"></div>
        <div class="relative z-10 text-white">
            <h1 class="text-5xl font-bold mb-4">{t('hero.heading')}</h1>
            <p class="text-xl mb-8 max-w-2xl mx-auto">{t('hero.description')}</p>
            <div class="space-x-4">
                <a href="#portfolio" class="bg-teal-500 hover:bg-teal-600 text-white py-3 px-6 rounded-lg transition-colors duration-300">{t('hero.cta.work')}</a>
                <a href="#contact" class="border border-white text-white py-3 px-6 rounded-lg hover:bg-white hover:text-teal-500 transition-colors duration-300">{t('hero.cta.contact')}</a>
            </div>
        </div>
    </section>

    <section id="about" class="py-16 bg-gray-100">
        <div class="container mx-auto text-center">
            <h2 class="text-4xl font-bold mb-8">{t('about.heading')}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                <div>
                    <img src="https://placehold.co/600x400?text=Team+at+Work" alt="Team at Work" class="rounded-lg shadow-lg mb-4">
                    <p class="text-lg mb-4">{t('about.main_text')}</p>
                </div>
                <div>
                    <h3 class="text-3xl font-bold mb-4">Unser Team</h3>
                    <div class="flex flex-col items-center mb-6">
                        <img src="https://placehold.co/150x150?text=Szymon+Pukacki" alt="Szymon Pukacki" class="rounded-full w-32 h-32 object-cover mb-2">
                        <p class="font-semibold">Szymon Pukacki</p>
                        <p class="text-gray-600">{t('about.szymon_pukacki_bio')}</p>
                    </div>
                    <div class="flex flex-col items-center">
                        <img src="https://placehold.co/150x150?text=Michal+Dydecki" alt="Michał Dydecki" class="rounded-full w-32 h-32 object-cover mb-2">
                        <p class="font-semibold">Michał Dydecki</p>
                        <p class="text-gray-600">{t('about.michal_dydecki_bio')}</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="services" class="py-16">
        <div class="container mx-auto text-center">
            <h2 class="text-4xl font-bold mb-8">{t('services.heading')}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <img src="https://placehold.co/100x100?text=CAD" alt="CAD Modeling Icon" class="mx-auto mb-4">
                    <h3 class="text-xl font-semibold mb-2">{t('services.cad_modeling')}</h3>
                    <p class="text-gray-600">{t('services.cad_modeling.description')}</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <img src="https://placehold.co/100x100?text=Drawings" alt="Technical Drawings Icon" class="mx-auto mb-4">
                    <h3 class="text-xl font-semibold mb-2">{t('services.technical_drawings')}</h3>
                    <p class="text-gray-600">{t('services.technical_drawings.description')}</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <img src="https://placehold.co/100x100?text=Reverse" alt="Reverse Engineering Icon" class="mx-auto mb-4">
                    <h3 class="text-xl font-semibold mb-2">{t('services.reverse_engineering')}</h3>
                    <p class="text-gray-600">{t('services.reverse_engineering.description')}</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <img src="https://placehold.co/100x100?text=Optimize" alt="Design Optimization Icon" class="mx-auto mb-4">
                    <h3 class="text-xl font-semibold mb-2">{t('services.design_optimization')}</h3>
                    <p class="text-gray-600">{t('services.design_optimization.description')}</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <img src="https://placehold.co/100x100?text=Product" alt="Product Development Icon" class="mx-auto mb-4">
                    <h3 class="text-xl font-semibold mb-2">{t('services.product_development')}</h3>
                    <p class="text-gray-600">{t('services.product_development.description')}</p>
                </div>
            </div>
        </div>
    </section>

    <section id="portfolio" class="py-16 bg-gray-100">
        <div class="container mx-auto text-center">
            <h2 class="text-4xl font-bold mb-8">{t('portfolio.heading')}</h2>
            <p class="text-lg mb-8 text-gray-600">{t('portfolio.nda_info')}</p>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-white p-4 rounded-lg shadow-lg">
                    <img src="https://placehold.co/400x300?text=Automotive+Heat+Sink" alt="Automotive Heat Sink Housing" class="rounded-lg mb-4">
                    <h3 class="text-xl font-semibold mb-2">{t('portfolio.automotive_heat_sink')}</h3>
                    <p class="text-gray-600">{t('portfolio.automotive_heat_sink.description')}</p>
                </div>
                <div class="bg-white p-4 rounded-lg shadow-lg">
                    <img src="https://placehold.co/400x300?text=Custom+Gearbox" alt="Custom Gearbox Assembly" class="rounded-lg mb-4">
                    <h3 class="text-xl font-semibold mb-2">{t('portfolio.custom_gearbox')}</h3>
                    <p class="text-gray-600">{t('portfolio.custom_gearbox.description')}</p>
                </div>
                <div class="bg-white p-4 rounded-lg shadow-lg">
                    <img src="https://placehold.co/400x300?text=Consumer+Device" alt="Smart Consumer Device Enclosure" class="rounded-lg mb-4">
                    <h3 class="text-xl font-semibold mb-2">{t('portfolio.consumer_device')}</h3>
                    <p class="text-gray-600">{t('portfolio.consumer_device.description')}</p>
                </div>
            </div>
        </div>
    </section>

    <section id="clients" class="py-16">
        <div class="container mx-auto text-center">
            <h2 class="text-4xl font-bold mb-8">{t('clients.heading')}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h3 class="text-2xl font-semibold mb-4">Wie wir arbeiten</h3>
                    <ul class="list-decimal list-inside text-left space-y-2">
                        <li>{t('clients.step1')}</li>
                        <li>{t('clients.step2')}</li>
                        <li>{t('clients.step3')}</li>
                        <li>{t('clients.step4')}</li>
                    </ul>
                    <p class="text-lg mt-4">{t('clients.additional_info')}</p>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg">
                    <h3 class="text-2xl font-semibold mb-4">Abrechnungsmethoden</h3>
                    <ul class="list-disc list-inside text-left space-y-2">
                        <li>{t('clients.b2b')}</li>
                        <li>{t('clients.contract')}</li>
                        <li>{t('clients.outsourcing')}</li>
                    </ul>
                </div>
            </div>
            <a href="#contact" class="mt-8 inline-block bg-teal-500 hover:bg-teal-600 text-white py-3 px-6 rounded-lg transition-colors duration-300">{t('hero.cta.contact')}</a>
        </div>
    </section>

    <section id="contact" class="py-16 bg-gray-100">
        <div class="container mx-auto text-center">
            <h2 class="text-4xl font-bold mb-8">{t('contact.heading')}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-lg text-left">
                    <form>
                        <div class="mb-4">
                            <label for="name" class="block text-gray-700 text-sm font-bold mb-2">{t('contact.form.name')}:</label>
                            <input type="text" id="name" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                        </div>
                        <div class="mb-4">
                            <label for="email" class="block text-gray-700 text-sm font-bold mb-2">{t('contact.form.email')}:</label>
                            <input type="email" id="email" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                        </div>
                        <div class="mb-4">
                            <label for="message" class="block text-gray-700 text-sm font-bold mb-2">{t('contact.form.message')}:</label>
                            <textarea id="message" name="message" rows="5" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"></textarea>
                        </div>
                        <div class="mb-4">
                            <label for="attachments" class="block text-gray-700 text-sm font-bold mb-2">{t('contact.form.attachments')}:</label>
                            <input type="file" id="attachments" name="attachments" multiple class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                        </div>
                        <button type="submit" class="bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">{t('contact.form.submit')}</button>
                    </form>
                </div>
                <div class="bg-white p-6 rounded-lg shadow-lg text-left">
                    <h3 class="text-2xl font-semibold mb-4">Kontaktinformationen</h3>
                    <p class="mb-2"><span class="font-semibold">E-Mail:</span> {t('contact.email_address')}</p>
                    <p class="mb-2"><span class="font-semibold">Telefon:</span> {t('contact.phone_number')}</p>
                    <p class="mb-2"><span class="font-semibold">LinkedIn:</span> <a href="#" class="text-teal-500 hover:underline">{t('contact.linkedin_profile')}</a></p>
                    <div class="mt-4">
                        <h4 class="font-semibold mb-2">Bürostandort:</h4>
                        <img src="https://placehold.co/400x250?text=Office+Map" alt="Office Location Map" class="rounded-lg shadow-lg">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-gray-900 text-white py-8 text-center">
        <p>{t('footer.copyright')}</p>
    </footer>
</Layout>
